@page "{id:int?}"
@model Moldoveanu_Iustin_Lab2.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>All categories</h1>

<p>
    <a asp-page="Create">Create new category</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CategoryData.Categories) {
            string SelectedRow = "";
            if (item.ID == Model.CategoryID)
            {
                SelectedRow = "table-succes";
            }
            <tr class="@SelectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <a asp-page="./Index" asp-route-id="@item.ID">Select</a> |
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@if (Model.CategoryData.Books != null)
{
    <hr />
    <h3>Books in the selected category</h3>
    <table class="table">
        @foreach (var book in Model.CategoryData.Books)
        {
            <tr>
                <td>
                    @book.Title by @book.Author.FullName

                    | <strong>All book categories:</strong>
                    @if (book.BookCategories != null && book.BookCategories.Any())
                    {
                        foreach (var bookCategory in book.BookCategories)
                        {
                            <span>@bookCategory.Category.CategoryName</span>
                            @if (bookCategory != book.BookCategories.Last())
                            {
                                @:<span>, </span>
                            }
                        }
                    }
                    else
                    {
                        <span>No categories available</span>
                    }
                </td>
            </tr>
        }
    </table>
}