@page
@model Moldoveanu_Iustin_Lab2.Pages.Borrowings.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Borrowing</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">  @* Text "Member" *@
            @Html.DisplayNameFor(model => model.Borrowing.Member)
        </dt>
        <dd class="col-sm-10"> @* Valoare Member.FullName *@
            @Html.DisplayFor(model => model.Borrowing.Member.FullName)
        </dd>


        <dt class="col-sm-2"> @* Text "Book" *@
            @Html.DisplayNameFor(model => model.Borrowing.Book)
        </dt>
        <dd class="col-sm-10"> @* Valoare Book.Title *@
            @Html.DisplayFor(model => model.Borrowing.Book.Title) - @Html.DisplayFor(model => model.Borrowing.Book.Author.FullName) | Publisher: @Html.DisplayFor(model => model.Borrowing.Book.Publisher.PublisherName)
        </dd>


        <dt class="col-sm-2"> @* Text "ReturnDate" *@
            @Html.DisplayNameFor(model => model.Borrowing.ReturnDate)
        </dt>
        <dd class="col-sm-10"> @* Valoare Borrowing.ReturnDate *@
            @Html.DisplayFor(model => model.Borrowing.ReturnDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Borrowing.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
